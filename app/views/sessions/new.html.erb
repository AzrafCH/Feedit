<html>
	<body class="no-sidebar is-preload">
		<div id="page-wrapper">

			<!-- Header -->
				<section id="header">

					<!-- Logo -->
						<h1>Feddit</h1>

            <!-- Nav -->
              <nav id="nav">
                <ul>
                  <li><%= link_to "Home", root_path %></li>
                  <li class="current"><%= link_to(controller: 'users', action: 'new') { 'Sign Up' } %></li>
                </ul>
              </nav>
            </section>

            <!-- Main -->
              <section id="main">
                <div class="container">
									<% if @user.errors.any? %>
			     							<% @user.errors.full_messages.each do |message| %>
												<ul>
			       							<li><%= message %></li>
												</ul>
			     							<% end %>
											<% end %>

									<%= link_to('Log in with Facebook!', '/auth/facebook') %>

                  <%= form_for @user, url: login_path, method: :post do |f| %>
									<% if @user.errors.any? %>
											<ul>
												<% @user.errors.full_messages.each do |message| %>
													<li class="font_color" ><%= message %></li>
												<% end %>
											</ul>
											<% end %>
                  <%= f.label :username %>
                  <%= f.text_field :username %><br>

                  <%= f.label :password %>
                  <%= f.password_field :password %><br>

                  <%= f.submit "Log In" %>
                  <% end %>
                </div>
              </section>

              <!-- Footer -->
                <section id="footer">
                  <div class="container">
                    <div class="row">
                      <div class="col-8 col-12-medium">
                      </div>
                      <div class="col-4 col-12-medium">
                      </div>
                      <div class="col-4 col-6-medium col-12-small">

                      </div>
                    </div>
                  </div>
                </section>

              </div>
              </body>
              </html>
