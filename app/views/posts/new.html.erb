<%= form_for @post do |f| %>
<%= f.hidden_field :forum, value: @forum.post_id %>

  <%= f.label "Title: " %><br>
  <%= f.text_field :title %><br>

  <%= f.label "Summary: " %><br>
  <%= f.text_area :summary %><br>

  <%= f.label :subfed_id, "Subfed" %><br>
  <%= f.collection_select  :subfed_ids, @subfeds, :id, :title %><br>


  <%= f.submit "Create Post" %>
<% end %>
