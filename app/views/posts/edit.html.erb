<html>
	<body class="no-sidebar is-preload">
		<div id="page-wrapper">

			<!-- Header -->
				<section id="header">

					<!-- Logo -->
						<h1><%= @post.title %></h1>

            <!-- Nav -->
              <nav id="nav">
                <ul>
                  <li><%= link_to "Back", posts_path(@post) %></li>
                  <li class="current"><%= link_to @user.username, users_path %></li>
                </ul>
              </nav>
            </section>

            <!-- Main -->
      				<section id="main">
      					<div class="container">
                  <%= form_for(@post) do |f| %>

                  <label>Post Title:</label><br>
                  <%= f.text_field :title %><br>

                  <label>Summary:</label><br>
                  <%= f.text_area :summary %><br>

                  <%= f.submit "Update" %>
                  <% end %>
                </div>
              </section>

              <!-- Footer -->
                <section id="footer">
                  <div class="container">
                    <div class="row">
                      <div class="col-8 col-12-medium">
                      </div>
                      <div class="col-4 col-12-medium">
                      </div>
                      <div class="col-4 col-6-medium col-12-small">

                      </div>
                    </div>
                  </div>
                </section>

            </div>
          </body>
        </html>
