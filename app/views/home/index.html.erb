<html>
	<head>
    <%= stylesheet_link_tag 'main' %>
		<title>Dopetrope by HTML5 UP</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="assets/css/main.css" />
	</head>
	<body class="left-sidebar is-preload">
		<div id="page-wrapper">

			<!-- Header -->
				<section id="header">

					<!-- Logo -->
						<h1><%= link_to "Feddit", root_path %></h1>

					<!-- Nav -->
						<nav id="nav">
							<ul>
								<li class="current"><%= link_to "Login", login_path %></li>
						<!--		<li><a href="right-sidebar.html">Right Sidebar</a></li> -->
						<!--	<li><a href="no-sidebar.html">No Sidebar</a></li> -->
							</ul>
						</nav>

				</section>

			<!-- Main -->
				<section id="main">
					<div class="container">
						<div class="row">
							<div class="col-4 col-12-medium">

              <!-- Subfed Sidebar -->
									<section class="box">
										<header>
											<h3>Subfeeds</h3>
										</header>
										<p>Choose A Category</p>
										<ul class="divided">
                      <% @subfeds.each do |subfeed| %>
                          <li><%= link_to subfeed.title, subfed_url(subfeed) %></li>
                      <% end %>
										</ul>
										<footer>
											<%= link_to "Create New Subfeed", new_subfed_path, class: "button alt" %></a>
										</footer>
									</section>

							</div>


								<!-- Content -->
								<div class="col-8 col-12-medium imp-medium">
								<% @posts.each do |post| %>
								<Section id="main">
								<div class="container">
								<div class="col-8 col-12-medium imp-medium">
								    <article class="box post">
								  <header>
								    <h2><%= link_to post.title %></h2>
								      <p>Created By: <%= post.user.username %></p>
								  </header>
								  <ul class="actions">
								    <li><%= link_to "Continue Reading", post_url(post), class: "button icon solid fa-file-alt"  %></li>
								  </ul>
								</article>
								</div>
								<% end %>
							</section>

			<!-- Footer -->
				<section id="footer">
					<div class="container">
						<div class="row">
							<div class="col-8 col-12-medium">
								<section>

							<div class="col-4 col-12-medium">
								</section>
							</div>
							<div class="col-4 col-6-medium col-12-small">

							</div>
						</div>
					</div>
				</section>

		</div>



	</body>
</html>
