						<!--	<li><a href="no-sidebar.html">No Sidebar</a></li> -->
							</ul>
						</nav>

				</section>

			<!-- Main -->
				<section id="main">
					<div class="container">
						<div class="row">
							<div class="col-4 col-12-medium">

								<!-- Login Sidebar -->
									<section class="box">
										<a href="#" class="image featured"><img src="images/pic09.jpg" alt="" /></a>
										<header>
											<h3><%= @user.username %></h3>
										</header>
										<p>Lorem ipsum dolor sit amet sit veroeros sed amet blandit consequat veroeros lorem blandit  adipiscing et feugiat phasellus tempus dolore ipsum lorem dolore.</p>
										<footer>
											<a href="#" class="button alt">Magna sed taciti</a>
										</footer>
									</section>
              <!-- Subfed Sidebar -->
									<section class="box">
										<header>
											<h3>Subfeeds</h3>
										</header>
										<p>Choose A Category</p>
										<ul class="divided">
                      <% @subfeds.each do |subfeed| %>
                          <li><%= link_to subfeed.title, subfed_url(subfeed) %></li>
                      <% end %>
										</ul>
										<footer>
											<%= link_to "Create New Subfeed", new_subfed_path, class: "button alt" %></a>
										</footer>
									</section>

							</div>
							<div class="col-8 col-12-medium imp-medium">

								<!-- Content -->
									<article class="box post">
										<a href="#" class="image featured"><img src="images/pic01.jpg" alt="" /></a>
										<header>
											<h2>This will be a subfed title belonging to post</h2>
											  <p>This will be a post title belonging to subfed</p>
										</header>
                    <ul class="actions">
                      <li><a class="button icon solid fa-file-alt" href="#">Continue Reading</a></li>
                      <li><a class="button alt icon solid fa-comment" href="#">33 comments</a></li>
                    </ul>
									</article>
							</div>
						</div>
					</div>
				</section>

			<!-- Footer -->
				<section id="footer">
					<div class="container">
						<div class="row">
							<div class="col-8 col-12-medium">
								<section>

							<div class="col-4 col-12-medium">
								<section>
									<header>
										<h2>What's this all about?</h2>
									</header>
