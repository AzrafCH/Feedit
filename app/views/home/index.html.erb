	<body class="left-sidebar is-preload">
		<div id="page-wrapper">

			<!-- Header -->
				<section id="header">

					<!-- Logo -->
						<h1><%= link_to "Feddit", root_path %></h1>

					<!-- Nav -->
						<nav id="nav">
							<ul>
								<li><%= link_to "Login", login_path %></li>
								<li class="current"><%= link_to @user.username, users_path %></li>
