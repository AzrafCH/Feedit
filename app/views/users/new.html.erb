<html>
	<body class="no-sidebar is-preload">
		<div id="page-wrapper">

			<!-- Header -->
				<section id="header">

					<!-- Logo -->
						<h1>Feddit</h1>

            <!-- Nav -->
              <nav id="nav">
                <ul>
                  <li class = "current"><%= link_to "Home", root_path %></li>
                  <li><%= link_to "Login", login_path %></li>
                </ul>
              </nav>
            </section>

            <!-- Main -->
              <section id="main">
                <div class="container">
                  <%= form_for @user, controller: 'users', action: 'create' do |f| %>
                  <%= f.label :username %>
                  <%= f.text_field :username %><br>

                  <%= f.label :email %>
                  <%= f.text_field :email %><br>

                  <%= f.label :password %>
                  <%= f.text_field :password %><br>

									<h3>Settings</h3><br>
                  <%= f.fields_for :settings do |set| %>
                  <div>
                    <%= set.label :bio %>
                    <%= set.text_area :bio %><br>


                    <%= set.label :age %>
                    <%= set.text_field :age %><br>


                    <%= set.label :location %>
                   <%= set.text_field :location %><br>
                 </div>
                 <% end %>
                  <%= f.submit "register" %>
                  <% end %>
                </div>
              </section>

              <!-- Footer -->
                <section id="footer">
                  <div class="container">
                    <div class="row">
                      <div class="col-8 col-12-medium">
                      </div>
                      <div class="col-4 col-12-medium">
                      </div>
                      <div class="col-4 col-6-medium col-12-small">

                      </div>
                    </div>
                  </div>
                </section>

              </div>
              </body>
              </html>
