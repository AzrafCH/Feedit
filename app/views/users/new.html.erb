<%= form_for @user, controller: 'users', action: 'create' do |f| %>
<%= f.hidden_field :forum, value: @forum.user_id %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.submit "register" %>
<% end %>
