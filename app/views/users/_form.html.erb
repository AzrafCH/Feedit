<html>
	<body class="no-sidebar is-preload">
		<div id="page-wrapper">

			<!-- Header -->
				<section id="header">

					<!-- Logo -->
						<h1><%= @user.username %></h1>

            <!-- Nav -->
              <nav id="nav">
                <ul>
                  <li><%= link_to "Back", users_path %></li>
                  <li class="current"><%= link_to @user.username, users_path %></li>
                </ul>
              </nav>
            </section>

            <!-- Main -->
              <section id="main">
                <div class="container">
                  <%= form_for @user do |f| %>

                    <%= f.label :email %>
                    <%= f.text_field :email %><br>

                    <%= f.label :password %>
                    <%= f.text_field :password %><br>

                  <h3>Settings</h3><br>
                  <%= f.fields_for :settings do |set| %>

                    <%= set.label :bio %>
                    <%= set.text_area :bio %><br>


                    <%= set.label :age %>
                    <%= set.text_field :age %><br>


                    <%= set.label :location %>
                   <%= set.text_field :location %><br>

                 <% end %>
                 <%= f.submit "Update!"%>
                 <% end %>
               </div>
             </section>

             <!-- Footer -->
               <section id="footer">
                 <div class="container">
                   <div class="row">
                     <div class="col-8 col-12-medium">
                     </div>
                     <div class="col-4 col-12-medium">
                     </div>
                     <div class="col-4 col-6-medium col-12-small">

                     </div>
                   </div>
                 </div>
               </section>

           </div>
         </body>
       </html>
