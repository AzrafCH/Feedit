<html>
	<head>
    <%= stylesheet_link_tag 'main' %>
		<title>Dopetrope by HTML5 UP</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="assets/css/main.css" />
	</head>
	<body class="left-sidebar is-preload">
		<div id="page-wrapper">

			<!-- Header -->
				<section id="header">

					<!-- Logo -->
						<h1><%= link_to "Feddit", root_path %></h1>

					<!-- Nav -->
						<nav id="nav">
							<ul>
								<li><%= link_to "Home", root_path %></li>
                <li><%= link_to "Subfeeds", subfeds_path %></li>
                <li><%= link_to "Posts", posts_path %></li>
								<li class="current"><%= link_to "Edit Settings", edit_user_path(@user) %></li>
                <li class="current"><%= link_to('Logout', {controller: 'sessions', action: 'destroy'},  method: 'post') %></li>
						<!--		<li><a href="right-sidebar.html">Right Sidebar</a></li> -->
						<!--	<li><a href="no-sidebar.html">No Sidebar</a></li> -->
							</ul>
						</nav>

				</section>

			<!-- Main -->
				<section id="main">
					<div class="container">
						<div class="row">
							<div class="col-4 col-12-medium">

								<!-- Login Sidebar -->
									<section class="box">
										<a href="#" class="image featured"><img src="images/pic09.jpg" alt="" /></a>
										<header>
											<h3><%= @user.username %></h3>
										</header>
										<p>Lorem ipsum dolor sit amet sit veroeros sed amet blandit consequat veroeros lorem blandit  adipiscing et feugiat phasellus tempus dolore ipsum lorem dolore.</p>
										<footer>
											<a href="#" class="button alt">Magna sed taciti</a>
										</footer>
									</section>
              <!-- Subfed Sidebar -->
									<section class="box">
										<header>
											<h3>Subfeeds</h3>
										</header>
										<p>Choose A Category</p>
										<ul class="divided">
                      <% @subfeds.each do |subfeed| %>
                          <li><%= link_to subfeed.title, subfed_url(subfeed) %></li>
                      <% end %>
										</ul>
										<footer>
											<%= link_to "Create New Subfeed", new_subfed_path, class: "button alt" %></a>
										</footer>
									</section>

							</div>


								<!-- Content -->
								<div class="col-8 col-12-medium imp-medium">
								<% @posts.each do |post| %>
								<Section id="main">
								<div class="container">
								<div class="col-8 col-12-medium imp-medium">
								    <article class="box post">
								  <header>
								    <h2><%= link_to post.title %></h2>
								      <p>Created By: <%= post.user.username %></p>
								  </header>
								  <ul class="actions">
								    <li><%= link_to "Continue Reading", post_url(post), class: "button icon solid fa-file-alt"  %></li>
								  </ul>
								</article>
								</div>
								<% end %>
							</section>

			<!-- Footer -->
				<section id="footer">
					<div class="container">
						<div class="row">
							<div class="col-8 col-12-medium">
								<section>

							<div class="col-4 col-12-medium">
								<section>
									<header>
										<h2>What's this all about?</h2>
									</header>
									<a href="#" class="image featured"><img src="images/pic10.jpg" alt="" /></a>
									<p>
										This is <strong>Dopetrope</strong> a free, fully responsive HTML5 site template by
